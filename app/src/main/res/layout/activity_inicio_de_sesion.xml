<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio_de_sesion">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <ImageView
        android:id="@+id/Logo_AntSave"
        android:layout_width="wrap_content"
        android:layout_height="226dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1" />
    <View
        android:id="@+id/recuadro_formulario"
        android:layout_width="350dp"
        android:layout_height="290dp"
        android:layout_marginBottom="28dp"
        android:background="#80FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/Logo_AntSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/fondo_recuadro_formulario"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@+id/espacio_cuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <EditText
        android:id="@+id/espacio_cuenta"
        android:layout_width="310dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/Logo_AntSave"
        android:layout_marginTop="32dp"
        android:hint="Cuenta"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.45">

    </EditText>

    <View
        android:id="@+id/fondo_recuadro_contrasena"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@+id/recuadro_contrasena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    />


    <EditText
        android:id="@+id/recuadro_contrasena"
        android:layout_width="310dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/espacio_cuenta"
        android:layout_marginTop="15dp"
        android:hint="Contrasena"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </EditText>




    <Button
        android:id="@+id/iniciosesion"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_buttons"
        android:backgroundTint="@color/buttons"
        android:text="Iniciar Sesion"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/recuadro_formulario"
        app:layout_constraintEnd_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:text="Salir"
        app:layout_constraintCircleRadius="85dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iniciosesion"
        android:background="@drawable/rounded_buttons"/>

</androidx.constraintlayout.widget.ConstraintLayout>